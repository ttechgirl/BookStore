@model IndexViewModel

<div class="container">
    <section class="featured-books">
        <h2>Featured Books</h2>
        <div class="book-grid">
            @foreach (var book in Model.Books)
            {
                <div class="book-card">
                    <img src="@book.CoverImageUrl" alt="@book.Title Cover" />
                    <h3>@book.Title</h3>
                    <p>by @book.Author</p>
                    <p class="price">$ @book.Price</p>
                </div>
            }
        </div>
        <a asp-action="GetAllBooks" class="view-all-button">View All Books</a>
    </section>
</div>

<section id="contact" class="">
    <div class="contact-container">
        <div class="message-form">
            <h3 class="form-heading text-center">Send us a message</h3>
            <p class="description">We are glad to have your order.</p>
            <form action="@Url.Action("ContactUs", "Home")" method="POST" class="form">
                <div class="form-group">
                    <label for="fullName" class="form-label">Your FullName</label>
                    <input type="text" name="ContactForm.FullName" class="form-input" placeholder="Enter your full name"
                           value="@Model.ContactForm.FullName" required />
                </div>

                <div class="form-group">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" name="ContactForm.Email" class="form-input" placeholder="Enter your email"
                           value="@Model.ContactForm.Email" required />
                </div>

                <div class="form-group">
                    <label for="phone" class="form-label">Phone number</label>
                    <input type="tel" name="ContactForm.PhoneNumber" class="form-input" placeholder="Enter your phone number"
                           value="@Model.ContactForm.PhoneNumber" required />
                </div>

                <div class="form-group">
                    <label for="bookTitle" class="form-label">Book Title</label>
                    <input type="text" name="ContactForm.BookTitle" class="form-input" placeholder="Enter book title"
                           value="@Model.ContactForm.BookTitle" required />
                </div>

                <div class="form-group">
                    <label for="message" class="form-label">Message</label>
                    <textarea name="ContactForm.Message" class="form-input form-textarea" rows="4" required>
                        @Model.ContactForm.Message
                    </textarea>
                </div>

                <button type="submit" class="submit-button">Send message</button>
            </form>
        </div>
    </div>
</section>
