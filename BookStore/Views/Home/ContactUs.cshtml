@model BookStore.ViewModels.ContactViewModel

<style>
    .section {
    padding-top: 10rem;
    padding-bottom: 10rem;
    background-color: #f3f4f6;
}

.contact-container {
    padding-left: 1rem;
    padding-right: 1rem;
    max-width: 1280px;
    margin: auto;
}

.description {
    margin-top: 8px;
    font-size: 1.5rem;
    color: #555;
    display: flex;
    justify-content: center;
}

.text-center {
    text-align: center;
}

.heading {
    font-size: 3rem;
    font-weight: bold;
    color: #1f2937;
    line-height: 1.25;
}

.subheading {
    max-width: 40rem;
    margin-top: 1rem;
    font-size: 1rem;
    color: #6b7280;
    line-height: 1.625;
}

.card-grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(1, 1fr);
    /*margin-top: 3rem;*/
}

@@media (min-width: 768px) {
    .section {
        padding-top: 16rem;
        padding-bottom: 16rem;
    }

    .heading {
        font-size: 4rem;
    }

    .card-grid {
        grid-template-columns: repeat(3, 1fr);
    }
}

.card {
    overflow: hidden;
    background-color: #ffffff;
    border-radius: 0.75rem;
    padding: 1.5rem;
}

.contact-info {
    font-size: 1.125rem;
    font-weight: medium;
    color: #1f2937;
    line-height: 1.75;
    margin-top: 1.5rem;
}

.message-form {
    padding: 3rem;
    background-color: #ffffff;
    border-radius: 0.75rem;
}

.form-heading {
    font-size: 3rem;
    font-weight: bold;
    color: #1f2937;
}

.form-group {
    /*margin-top: 1rem;*/
}

.form-label {
    font-size: 1rem;
    font-weight: medium;
    color: #1f2937;
}

.form-input {
    margin-top: 0.625rem;
    width: 100%;
    padding: 1rem;
    color: #111827;
    background-color: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 0.375rem;
}

.form-textarea {
    resize: vertical;
}

.submit-button {
    display: inline-flex;
    justify-content: center;
    width: 100%;
    padding: 1rem;
    color: #ffffff;
    background-color: #2563eb;
    border-radius: 0.375rem;
    transition: background-color 0.2s;
}

    .submit-button:hover {
        background-color: #1d4ed8;
    }
</style>

<div>
    <section id="contact" class="contact-section">
        <div class="contact-container">
            <div class="message-form">
                <h3 class="form-heading text-center">Send us a message</h3>
                <p class="description">We are glad to have your order.</p>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <form asp-action="ContactUs" asp-controller="Home" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label asp-for="FullName" class="form-label">Your Full Name</label>
                        <input asp-for="FullName" class="form-input" placeholder="Enter your full name" required />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" class="form-input" placeholder="Enter your email" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-input" placeholder="Enter your phone number" required />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BookTitle" class="form-label">Book Title</label>
                        <input asp-for="BookTitle" class="form-input" placeholder="Enter book title" required />
                        <span asp-validation-for="BookTitle" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Message" class="form-label">Message</label>
                        <textarea asp-for="Message" class="form-input form-textarea" rows="4" required></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>

                    <button type="submit" class="submit-button">Send Message</button>
                </form>
            </div>
        </div>
    </section>
</div>



